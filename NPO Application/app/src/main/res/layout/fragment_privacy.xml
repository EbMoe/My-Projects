<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title Section -->
        <TextView
            android:id="@+id/privacy_policy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/lightgreen"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Card for Introduction -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#004D40">

            <TextView
                android:id="@+id/privacy_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We value your privacy and are committed to protecting your personal data. This Privacy Policy outlines how we collect, use, and safeguard your information."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Card for Information Collection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#004D40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/info_collection_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information We Collect"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/info_collection_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We may collect the following information:\n\n• Personal Identification Information (Name, Email Address, etc.)\n• Usage Data (how you interact with the app)\n• Device Information (device type, operating system)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Use of Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#004D40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/info_use_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How We Use Your Information"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/info_use_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We use the information we collect for the following purposes:\n\n• To provide and maintain our service\n• To improve our app based on your feedback\n• To send you updates, promotional offers, and other relevant information"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Data Security -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#004D40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/data_security_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Security"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/data_security_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We prioritize the security of your data. We use industry-standard measures to protect your information from unauthorized access or disclosure."
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for User Rights -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#004D40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/user_rights_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Rights"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/user_rights_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You have the right to:\n\n• Access the personal information we hold about you\n• Request corrections or updates to your information\n• Request deletion of your information under certain conditions"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Contact Us -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#004D40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/contact_us_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/contact_us_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you have any questions about this Privacy Policy, please contact us at privacy@NpsChamps.org.za."
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
