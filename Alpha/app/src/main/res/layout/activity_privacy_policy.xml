<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicyActivity"
    android:background="#00FFFFFF">


    <TextView
        android:id="@+id/titlePrivacyPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />


    <ScrollView
        android:id="@+id/privacyPolicyScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titlePrivacyPolicy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/privacyPolicyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?attr/dividerVertical"
            android:showDividers="middle">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/section1Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/data_collection"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:onClick="toggleSection1" />


                    <TextView
                        android:id="@+id/section1Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/we_collect_personal_data_such_as_name_email_address_and_event_details_to_improve_user_experience_and_for_the_functionality_of_the_app_data_is_stored_locally_and_synced_to_the_cloud"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/section2Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/data_usage"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:onClick="toggleSection2" />


                    <TextView
                        android:id="@+id/section2Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/your_personal_data_is_used_for_managing_events_providing_event_reminders_and_ensuring_synchronization_between_your_devices_we_do_not_share_your_data_with_third_parties_unless_required_by_law"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/section3Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/data_security"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:onClick="toggleSection3" />


                    <TextView
                        android:id="@+id/section3Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/we_take_the_security_of_your_data_seriously_we_implement_industry_standard_security_measures_to_ensure_that_your_personal_data_is_protected_from_unauthorized_access"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/section4Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/data_retention"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:onClick="toggleSection4" />


                    <TextView
                        android:id="@+id/section4Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/we_retain_your_personal_data_only_as_long_as_it_is_necessary_for_the_purposes_outlined_in_this_policy_or_as_required_by_law_once_your_data_is_no_longer_needed_we_securely_delete_it"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/section5Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_rights"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:onClick="toggleSection5" />


                    <TextView
                        android:id="@+id/section5Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/as_a_user_you_have_the_right_to_access_modify_or_delete_your_personal_data_you_can_also_opt_out_of_data_collection_and_usage_by_contacting_us_at_any_time"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="16dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
