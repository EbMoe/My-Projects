<Window x:Class="ST10084812.PROG.POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome Window" Height="428" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                <Image Source="1.png" Stretch="Fill"/>
                <TextBlock Text="Welcome to The Recipe App!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Arial Black" Foreground="White" Margin="0,46,0,0"/>
            </Grid>
        </StackPanel>
        <Button Content="Go to Menu" FontSize="18" Click="GoToMenu_Click" Foreground="White" Background="#FFD09A52" FontFamily="Arial Black" Height="50" VerticalAlignment="Bottom"/>
    </Grid>
</Window>

