@model CLDV6211.POE.Models.Car

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarNo" />
            <div class="form-group">
                <label asp-for="CarModel" class="control-label"></label>
                <input asp-for="CarModel" class="form-control" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KMTravelled" class="control-label"></label>
                <input asp-for="KMTravelled" class="form-control" />
                <span asp-validation-for="KMTravelled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceKM" class="control-label"></label>
                <input asp-for="ServiceKM" class="form-control" />
                <span asp-validation-for="ServiceKM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Available" class="control-label"></label>
                <input asp-for="Available" class="form-control" />
                <span asp-validation-for="Available" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarMake" class="control-label"></label>
                <select asp-for="CarMake" class="form-control" asp-items="ViewBag.CarMake"></select>
                <span asp-validation-for="CarMake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeID" class="control-label"></label>
                <input asp-for="TypeID" class="form-control" />
                <span asp-validation-for="TypeID" class="text-danger"></span>
