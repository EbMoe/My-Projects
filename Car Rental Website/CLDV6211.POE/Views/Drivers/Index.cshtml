@model IEnumerable<CLDV6211.POE.Models.Driver>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DriverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrMobile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DriverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrMobile)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DriverNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DriverNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DriverNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
