@model CLDV6211.POE.Models.Rental

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarNo" class="control-label"></label>
                <select asp-for="CarNo" class ="form-control" asp-items="ViewBag.CarNo"></select>
            </div>
            <div class="form-group">
                <label asp-for="InspectorNo" class="control-label"></label>
                <select asp-for="InspectorNo" class ="form-control" asp-items="ViewBag.InspectorNo"></select>
            </div>
            <div class="form-group">
                <label asp-for="DriverNo" class="control-label"></label>
                <select asp-for="DriverNo" class ="form-control" asp-items="ViewBag.DriverNo"></select>
            </div>
            <div class="form-group">
                <label asp-for="RentalFee" class="control-label"></label>
                <input asp-for="RentalFee" class="form-control" />
                <span asp-validation-for="RentalFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Start_Date" class="control-label"></label>
                <input asp-for="Start_Date" class="form-control" />
                <span asp-validation-for="Start_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="End_Date" class="control-label"></label>
                <input asp-for="End_Date" class="form-control" />
                <span asp-validation-for="End_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
